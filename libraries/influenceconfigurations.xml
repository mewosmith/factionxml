<influencelistconfigurations>
  <!--Other influences-->

  <influencelist name="emp_missile">
    <influences>
      <influence type="disableboost">
        <profile type="continuous" duration="30" />
      </influence>
      <influence type="disabletravel">
        <profile type="continuous" duration="30" />
      </influence>
    </influences>
  </influencelist>

  <!--This name is referenced in navigationcontroller.cpp-->
  <influencelist name="forced_out_of_highway">
    <influences>
      <!-- disable all acceleration for a time, so that the ship drifts away from the highway tube -->
      <influence type="forwardacceleration">
        <profile type="envelope" startvalue="0" sustainvalue="0" endvalue="1" attackduration="0" sustainduration="10" releaseduration="10" />
      </influence>
      <influence type="reverseacceleration">
        <profile type="envelope" startvalue="0" sustainvalue="0" endvalue="1" attackduration="0" sustainduration="10" releaseduration="10" />
      </influence>
      <influence type="strafeacceleration">
        <profile type="envelope" startvalue="0" sustainvalue="0" endvalue="1" attackduration="0" sustainduration="10" releaseduration="10" />
      </influence>
      <influence type="steeringacceleration">
        <profile type="envelope" startvalue="0" sustainvalue="0" endvalue="1" attackduration="0" sustainduration="10" releaseduration="10" />
      </influence>
      <!-- disallow movement for a longer time -->
      <influence type="maxforwardspeed">
        <profile type="envelope" startvalue="1" sustainvalue="0" endvalue="1" attackduration="10" sustainduration="50" releaseduration="0" />
      </influence>
      <influence type="maxreversespeed">
        <profile type="envelope" startvalue="1" sustainvalue="0" endvalue="1" attackduration="10" sustainduration="50" releaseduration="0" />
      </influence>
      <influence type="maxstrafespeed">
        <profile type="envelope" startvalue="1" sustainvalue="0" endvalue="1" attackduration="10" sustainduration="50" releaseduration="0" />
      </influence>
    </influences>
  </influencelist>

